<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search" value="">
        <%= link_to "Search", "#", class: "nav-link btn btn-outline-success my-2 my-sm-0" %>
      </li>
      <li class="nav-item">
        <%= link_to "Add Flat", new_flat_path, class: "nav-link btn btn-outline-primary my-2 my-sm-0 ml-2" %>
      </li>
    </ul>
  </div>
</div>

<h1>All of our Flats</h1>
<p><%= "All #{@flats.count} flats " %></p>



<% @flats.each do |flat| %>
    <div class= "card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><%= flat.name %></h2>
        <p><%= flat.address%> <strong><%= flat.description%></strong> <%= flat.price_per_night %> <%= flat.number_of_guests %></p>
      </div>
    </div>
<% end %>


