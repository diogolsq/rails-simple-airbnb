<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= simple_form_for :search, url: flats_path(@flatresult), method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-flat">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "Add Flat", new_flat_path, class: "nav-link btn btn-outline-primary my-2 my-sm-0 ml-2" %>
      </li>
    </ul>
  </div>
</div>

<h1>All of our Flats</h1>
<p><%= "All #{@flats.count} flats " %></p>



<% @flats.each do |flat| %>
    <div class= "card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><%= link_to flat.name, flat_path(flat), class: "btn btn-primary" %>
</h2>
        <p><%= flat.address%> <strong><%= flat.description%></strong> <%= flat.price_per_night %> <%= flat.number_of_guests %></p>
      </div>
    </div>
<% end %>


